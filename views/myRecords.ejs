<!DOCTYPE html>
<html lang="en">

<head>
    <title>My Records</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header>
        <a href="/">Home</a>
        <a href="/allCountries">All Countries</a>
        <a href="/myRecords">My Records</a>
    </header>
    <main>
        <% if (data.length> 0) { %>
            <div class="big-div">
                <% data.forEach(oneCountry=> { %>

                    <div class="cards">
                        <h3>
                            <%= oneCountry.country_name %>
                        </h3>
                        <p>
                            <b>Date: </b> <%= oneCountry.date %>
                        </p>
                        <div>
                            <form action="/recordsDetails/<%= oneCountry.id %>" method="get">
                                <input type="submit" value="Details">
                            </form>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <% } else { %>
                <h1>NO AVAILABLE RECORDS</h1>
                <% } %>
    </main>
</body>

</html>